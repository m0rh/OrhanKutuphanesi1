@using WebUygulamaProje1.Utility;

@model List<Kitap>


<div class="container">

	<div class="row pt-3 pb-4"
		<div>
			<h1 style="color:slateblue"><b>KİTAPLAR</b></h1>
		</div>
	</div>

	<table class="table table-bordered">
		<thead>
			<tr>		
				<th>					
				</th>
				
				@if (User.IsInRole(UserRoles.Role_Admin))
				{
					<th>
						Id
					</th>
				}
				<th>
					Kitap Adı
				</th>
				<th>
					Tanım
				</th>
				<th>
					Yazar
				</th>

				<th>
					Kitap Türü
				</th>	
				<th>
					Fiyat
				</th>
				@if (User.IsInRole(UserRoles.Role_Admin))
				{
					<th>
					</th>
					<th>
					</th>
				}

			</tr>
		</thead>

		<tbody>
			@foreach(var kitap in Model)
			{
				<tr>
						<td align="center" valign="middle">
								<img src="@kitap.ResimUrl" style="border-radius: 7px; border: 1px  solid #bbb9b9;
									 max-width: 145px; max-height: 130px;" />
						</td>
					@if (User.IsInRole(UserRoles.Role_Admin))
					{
						<td align="center" valign="middle">@kitap.Id</td>
					}
						<td align="center" valign="middle">@kitap.KitapAdi</td>
						<td align="center" valign="middle">@kitap.Tanim</td>
						<td align="center" valign="middle">@kitap.Yazar</td>
						<td align="center" valign="middle">@kitap.KitapTuru.Ad</td>
						<td align="center" valign="middle">@kitap.Fiyat tl</td>

					@if (User.IsInRole(UserRoles.Role_Admin))
					{
						<td align="center" valign="middle">
							<a asp-controller="Kitap" asp-action="EkleGuncelle" asp-route-id="@kitap.Id" type="button" class="btn btn-success" style="width:250px">Güncelle</a>
						</td>
						<td align="center" valign="middle">
							<a asp-controller="Kitap" asp-action="Sil" asp-route-id="@kitap.Id" type="button" class="btn btn-danger" >Sil</a>						
						</td>
					}

				</tr>
			}
		</tbody>
	</table>

	@if (User.IsInRole(UserRoles.Role_Admin))
	{
		<div class="row pt-3 pb-2">
			<div>
				<a asp-controller="Kitap" asp-action="EkleGuncelle" class="btn btn-lg btn-primary" type="button">
					Yeni Kitap Oluştur
				</a>
			</div>
		</div>
	}

	@if (TempData["basarili"] != null)
	{
		<h2 style="color:red">@TempData["basarili"]</h2>
	}


</div>